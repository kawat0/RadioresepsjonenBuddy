{
  "manifest_version": 2,

  "name": "RadioresepsjonenBuddy",
  "description": "Lists the latest podcasts from Radioresepsjonen in a simple list.",
  "version": "1.0",

  "permissions" : [
    "tabs",
    "https://www.google.com/*",
    "http://podkast.nrk.no/program/*"
  ],

  "content_security_policy": "script-src 'self' https://www.google.com https://www.google.com/uds/?file=feeds&v=1 https://www.google.com/jsapi; object-src 'self'",

  "browser_action": {
    "default_title": "Radioresepsjonen RSS Fetcher",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }

}
